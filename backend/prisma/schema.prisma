generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")

}

//////////////////////////////////////
// ENUMS
//////////////////////////////////////

enum UserRole {
  EMPLOYEE
  SUPERVISOR
}

enum AlertLevel {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

//////////////////////////////////////
// MODELS
//////////////////////////////////////

model Sector {
  id            String         @id @default(uuid())
  name          String         @unique
  users         User[]
  notifications Notification[]
  createdAt     DateTime       @default(now())
}

model User {
  id                String        @id @default(uuid())
  name              String
  email             String        @unique
  role              UserRole      @default(EMPLOYEE)
  
  // Relacionamento Obrigatório (Sem '?')
  sector            Sector        @relation(fields: [sectorId], references: [id])
  sectorId          String
  
  notificationsRead ReadReceipt[]
  createdAt         DateTime      @default(now())
}

model Notification {
  id             String        @id @default(uuid())
  title          String
  message        String        @db.Text // @db.Text permite mensagens longas
  level          AlertLevel
  
  // Setor Alvo (Pode ser nulo se for uma notificação para TODOS os setores)
  targetSector   Sector?       @relation(fields: [targetSectorId], references: [id])
  targetSectorId String?
  
  readReceipts   ReadReceipt[]
  createdAt      DateTime      @default(now())
}

model ReadReceipt {
  id             String       @id @default(uuid())
  
  user           User         @relation(fields: [userId], references: [id])
  userId         String
  
  notification   Notification @relation(fields: [notificationId], references: [id])
  notificationId String
  
  readAt         DateTime?
  acknowledged   Boolean      @default(false)
  createdAt      DateTime     @default(now())

  // Garante que um usuário não tenha dois recibos para a mesma notificação
  @@unique([userId, notificationId])
}